---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import MainMenu from "../components/MainMenu.vue"

import { getImage } from "astro:assets"
import FaviconPNG from '../images/2024/favicon.png';
const optimizedFaviconPNG = await getImage({ src: FaviconPNG })

import FaviconSVG from '../images/2024/favicon.svg';
const optimizedFaviconSVG = await getImage({ src: FaviconSVG })

import { getImage } from "astro:assets"
import bg from "../images/2024/mountains.webp"
const optimizedBackgroundImage = await getImage({ src: bg })
import { ViewTransitions } from 'astro:transitions';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" sizes="any" href={optimizedFaviconPNG.src} />
    <link rel="icon" type="image/svg+xml" href={optimizedFaviconSVG.src} />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://js.tito.io/v2" async></script>
    
    <title>{title}</title>
    <meta name="description" content="Creative minds. Meaningful relationships. Magical experiences.">

    <script defer data-domain="thisnextthing.com" src="https://plausible.io/js/script.js"></script>
    <ViewTransitions />
  </head>
  <body class="font-sans bg-cover bg-fixed" style={`background-image: url('${optimizedBackgroundImage.src}')`}>
    <div class="flex h-screen">
      <div class="w-full md:w-[inherit] md:m-auto">
        <slot />
      </div>
    </div>

    <footer class="fixed bottom-0 right-0 bg-white bg-opacity-50 hidden md:block p-1 px-4 text-sm rounded-tl">
      Photography by <a class="font-medium" href="https://normanposselt.com/">Norman Posselt</a>
    </footer>
  </body>
</html>