---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import MainMenu from "../components/MainMenu.vue"

import { getImage } from "astro:assets"
import FaviconPNG from '../images/2024/favicon.png';
const optimizedFaviconPNG = await getImage({ src: FaviconPNG })

import FaviconSVG from '../images/2024/favicon.svg';
const optimizedFaviconSVG = await getImage({ src: FaviconSVG })
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" sizes="any" href={optimizedFaviconPNG.src} />
		<link rel="icon" type="image/svg+xml" href={optimizedFaviconSVG.src} />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<script src="https://js.tito.io/v2" async></script>
		
		<title>{title}</title>
		<meta name="description" content="The spiritual successor to Funconf">

		<script defer data-domain="thisnextthing.com" src="https://plausible.io/js/script.js"></script>
	</head>
	<body class="font-sans">
		<div class="flex h-screen">
		  <div class="m-auto">
		    <slot />

				<footer class="p-4 border-t text-gray-600 text-sm flex">
					<a href="mailto:info@thisnextthing.com">info@thisnextthing.com</a>

					<span class="flex-1 text-right">
						Headshots by <a href="https://normanposselt.com">Norman Posselt</a>.
					</span>
				</footer>
			</div>
		</div>
	</body>
</html>

<style is:global>
	a { @apply font-medium hover:underline }
</style>